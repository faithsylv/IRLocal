
<div class='home-top'>
  <p class='search-prompt'>Find independent, local shops near you</p>
  <nav class = 'home_search navbar navbar-light'>
    <%= form_tag pages_result_path, :method => 'get', :class => 'form-inline' do %>
      <%= search_field_tag :query, 'Search', :class => 'form-control mr-sm-2', :value => '', :placeholder => 'ðŸ‘€'%>
      <%= submit_tag "DISCOVER", :class => 'search-button'%>
    <% end %>
  </nav>
  <div class="dropdown">
    <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      ADD YOUR LOCAL
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <%= link_to '+ SHOP', new_shop_path, :class => "dropdown-item" %>
      <%= link_to '+ CATEGORY', new_category_path, :class => "dropdown-item" %>
      <%= link_to '+ BRAND', new_brand_path, :class => "dropdown-item" %>
    </div>
  </div>
</div>

