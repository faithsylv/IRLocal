<%= form_for @category, :html => {:class => 'form category'} do |f|%>

<table>

  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name, :class => "form_input category" %></td>
  </tr>

  <tr>
    <td><%= f.label :image %></td>
    <td><%= f.text_field :image, :class => "form_input category" %></td>
  </tr>

</table>

<div class = 'submit category'>
  <%= f.submit %>
</div>

<% end %>
