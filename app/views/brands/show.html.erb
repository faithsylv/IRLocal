<h2><%= @brand.name %></h2>

<%= cl_image_tag (@brand.logo), :class => 'brand logo'%>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
  <% @brand.images.each_index do |i| %>
    <li data-target="#carouselExampleIndicators" data-slide-to=i.to_s class=<%= 'active'if i == 0%>></li>
  <% end %>
  </ol>
  <div class="carousel-inner" role="listbox" style=" width:100%; height: 500px !important;">
    <% @brand.images.each.with_index do |image, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <%= cl_image_tag (image), :class => 'brand feature d-block w-100'%>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr>

<p class='shop-content'><%= @shop.description %></p>

<hr>

<h3>Shops:</h3>
<% @brand.shops.each do |shop| %>
  <%= link_to shop.name, shop %>
<% end %>

<h3>Controls</h3>
<div class = 'controls'>
  <%= link_to 'Edit Brand', edit_brand_path %>
  <%= link_to 'Remove Brand', @brand, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
